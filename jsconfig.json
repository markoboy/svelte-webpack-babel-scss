{
  "compilerOptions": {
    "target": "esnext",
    "allowSyntheticDefaultImports": false,
    "baseUrl": "./",
    "checkJs": false,
    "paths": {
      "svelte": ["./node_modules/svelte/*"],
      "@components/*": ["./src/components/*"],
      "@models/*": ["./src/models/*"],
      "@stores/*": ["./src/stores/*"],
      "@utils/*": ["./src/utils/*"],
      "@views/*": ["./src/views/*"]
    }
  },
  "exclude": ["./node_modules", "./public/**/*"],
  "include": ["./node_modules/svelte/**/*", "./src/**/*"]
}
